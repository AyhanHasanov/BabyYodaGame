<Window x:Class="BabyYodaGame.WonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabyYodaGame"
        mc:Ignorable="d"
        Title="WonWindow" Height="400" Width="550" Icon="/Resources/goldenFish.png" ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/wonUI.png"/>
        </Grid.Background>
        <Rectangle x:Name="penguiny" RenderTransformOrigin="0.499,0.501" Margin="233,22,0,45">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Resources/penguin_1.png" Stretch="Fill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Canvas/>
        <Label x:Name="txtLbl" Content="You've saved Penguiny from" HorizontalAlignment="Left" Margin="90,146,0,0" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontStyle="Italic" FontWeight="Bold"/>
    </Grid>
</Window>
