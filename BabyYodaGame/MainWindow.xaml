<Window x:Class="BabyYodaGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabyYodaGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Canvas Background="Red" Name="MyCanvas" KeyDown="MyCanvas_KeyDown" KeyUp="MyCanvas_KeyUp" Focusable="True">
            <Rectangle Name="player" Height="75" Width="75" Canvas.Left="25" Canvas.Top="27">
                <Rectangle.Fill>
                    <ImageBrush x:Name="imgBrush" ImageSource="Resources/front3.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle Name="penguin" Height="75" Width="75" Canvas.Left="150" Canvas.Top="150">
                <Rectangle.Fill>
                    <ImageBrush x:Name="fishBrush" ImageSource="pack://application:,,,/Resources/penguin-crying.gif"/>
                </Rectangle.Fill>
            </Rectangle>
        </Canvas>
    </Grid>
</Window>
