<Window x:Class="BabyYodaGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabyYodaGame"
        mc:Ignorable="d"
        Title="No fishes"
        Height="600" Width="800">
    <Grid>
        <Canvas Name="MyCanvas" KeyDown="MyCanvas_KeyDown" KeyUp="MyCanvas_KeyUp" Focusable="True">
            <!--<Canvas.Background>
                <ImageBrush ImageSource="/Resources/map-ready.png"/>
            </Canvas.Background> -->
            <Rectangle Name="player" Height="75" Width="75" Canvas.Left="0" Canvas.Top="0">
                <Rectangle.Fill>
                    <ImageBrush x:Name="imgBrush" ImageSource="Resources/front3.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="scoreLbl" Content="0 fishes" FontFamily="Segoe UI" FontSize="25" FontWeight="Bold" Canvas.Left="25"/>
            <Label x:Name="coords" Content="corrdinates" Canvas.Left="198" Canvas.Top="14"/>
        </Canvas>
    </Grid>
</Window>
